{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2022": true,
        "jquery": true
    },
    "parserOptions": {
        "ecmaVersion": 2024,
        "sourceType": "module"
    },
    "rules": {
        // Visualizations may run in very old browsers without `let` and `const`
        "no-var": "off",
        // The example code does not use some parameters. If unused variables should be
        // an error, delete the following rule
        "no-unused-vars": [
            "warn",
            {
                "ignoreRestSiblings": true,
                "argsIgnorePattern": "^_"
            }
        ]
    }
}
